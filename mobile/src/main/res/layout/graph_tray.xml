<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true">

    <ListView
        android:id="@+id/current_graphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:divider="@null"/>

    <com.android2.calculator3.view.SolidPadLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/display_color"
        android:columnCount="4"
        android:rowCount="1"
        custom:preventParentTouchEvents="true">

        <com.android2.calculator3.view.ImageButton
            android:id="@+id/btn_zoom_in"
            android:src="@drawable/btn_zoomin"
            android:onClick="onButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="14dp"
            android:background="@color/pad_button_advanced_ripple_color"/>

        <com.android2.calculator3.view.ImageButton
            android:id="@+id/btn_zoom_out"
            android:src="@drawable/btn_zoomout"
            android:onClick="onButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="14dp"
            android:background="@color/pad_button_advanced_ripple_color"/>

        <com.android2.calculator3.view.ImageButton
            android:id="@+id/btn_zoom_reset"
            android:src="@drawable/btn_reset"
            android:onClick="onButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="14dp"
            android:background="@color/pad_button_advanced_ripple_color"/>

        <com.android2.calculator3.view.ImageButton
            android:id="@+id/btn_close_graph"
            android:src="@drawable/btn_close"
            android:onClick="onButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="14dp"
            android:background="@color/pad_button_advanced_ripple_color"/>

    </com.android2.calculator3.view.SolidPadLayout>

</LinearLayout>