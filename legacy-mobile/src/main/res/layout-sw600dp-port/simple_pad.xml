<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/Theme.Calculator.ButtonRowStyle">

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/digit7"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/digit7" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/digit8"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/digit8" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/digit9"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/digit9" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/div"
            style="@style/Theme.Calculator.ButtonOperationCellStyle"
            android:text="@string/div" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/leftParen"
            style="@style/Theme.Calculator.ButtonOperationCellStyle"
            android:text="@string/leftParen" />
    </LinearLayout>

    <LinearLayout style="@style/Theme.Calculator.ButtonRowStyle">

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/digit4"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/digit4" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/digit5"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/digit5" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/digit6"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/digit6" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/mul"
            style="@style/Theme.Calculator.ButtonOperationCellStyle"
            android:text="@string/mul" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/rightParen"
            style="@style/Theme.Calculator.ButtonOperationCellStyle"
            android:text="@string/rightParen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout style="@style/Theme.Calculator.ButtonRowStyle">

                <com.android2.calculator3.view.ColorButton
                    android:id="@+id/digit1"
                    style="@style/Theme.Calculator.ButtonDigitCellStyle"
                    android:text="@string/digit1" />

                <com.android2.calculator3.view.ColorButton
                    android:id="@+id/digit2"
                    style="@style/Theme.Calculator.ButtonDigitCellStyle"
                    android:text="@string/digit2" />

                <com.android2.calculator3.view.ColorButton
                    android:id="@+id/digit3"
                    style="@style/Theme.Calculator.ButtonDigitCellStyle"
                    android:text="@string/digit3" />

                <com.android2.calculator3.view.ColorButton
                    android:id="@+id/minus"
                    style="@style/Theme.Calculator.ButtonOperationCellStyle"
                    android:text="@string/minus" />
            </LinearLayout>

            <LinearLayout style="@style/Theme.Calculator.ButtonRowStyle">

                <com.android2.calculator3.view.ColorButton
                    android:id="@+id/digit0"
                    style="@style/Theme.Calculator.ButtonDigitCellStyle"
                    android:layout_weight="2"
                    android:text="@string/digit0" />

                <com.android2.calculator3.view.ColorButton
                    android:id="@+id/dot"
                    style="@style/Theme.Calculator.ButtonDigitCellStyle"
                    android:text="@string/dot" />

                <com.android2.calculator3.view.ColorButton
                    android:id="@+id/plus"
                    style="@style/Theme.Calculator.ButtonOperationCellStyle"
                    android:text="@string/plus" />
            </LinearLayout>
        </LinearLayout>

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/equal"
            style="@style/Theme.Calculator.ButtonOperationCellStyle.Equal"
            android:text="@string/equal" />
    </LinearLayout>
</LinearLayout>
