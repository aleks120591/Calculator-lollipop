<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/functionPad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/group_padding"
    android:orientation="vertical">

    <LinearLayout style="@style/Theme.Calculator.ButtonRowStyle">

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/A"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/A" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/B"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/B" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/C"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/C" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/D"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/D" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/E"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:text="@string/E" />
    </LinearLayout>

    <LinearLayout style="@style/Theme.Calculator.ButtonRowStyle">

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/F"
            style="@style/Theme.Calculator.ButtonDigitCellStyle"
            android:layout_weight="3"
            android:text="@string/F" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/dec"
            style="@style/Theme.Calculator.ButtonFunctionCellStyle"
            android:layout_weight="4"
            android:tag="@string/decDesc"
            android:text="@string/dec" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/bin"
            style="@style/Theme.Calculator.ButtonFunctionCellStyle"
            android:layout_weight="4"
            android:tag="@string/binDesc"
            android:text="@string/bin" />

        <com.android2.calculator3.view.ColorButton
            android:id="@+id/hex"
            style="@style/Theme.Calculator.ButtonFunctionCellStyle"
            android:layout_weight="4"
            android:tag="@string/hexDesc"
            android:text="@string/hex" />
    </LinearLayout>
</LinearLayout>
